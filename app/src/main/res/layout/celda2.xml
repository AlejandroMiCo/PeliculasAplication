<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/imgPeliculaCompleta"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/sincara" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="5dp">

        <TextView
            android:id="@+id/txtTituloCompleta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:scaleX="1"
            android:scaleY="1"
            android:text="TextView"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblDirector"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".27"
                android:gravity="center_vertical"
                android:paddingBottom="5dp"
                android:text="Director:"
                android:textAlignment="gravity"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtDirectorCompleta"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".73"
                android:paddingBottom="5dp"
                android:scaleX="1"
                android:scaleY="1"
                android:text="TextView"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".27"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblFecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="Fecha:"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/lblDuracion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="DuraciÃ³n:"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/lblSala"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="Sala:"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/imgFavorita"
                    android:layout_width="30sp"
                    android:layout_height="30sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".73"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtFechaCompleta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="TextView"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtDuracionCompleta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="TextView"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtSalaCompleta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="TextView"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/imgCalificacionCompleta"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical|end"
                    android:adjustViewBounds="true"
                    android:paddingEnd="15dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/g" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>